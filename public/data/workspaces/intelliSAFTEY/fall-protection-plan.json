{
  "id": "intelliSAFTEY/fall-protection-plan",
  "title": "Fall Protection Plan",
  "description": "Plan anchors, systems, and controls for fall protection.",
  "gadgets": [
    {
      "id": "fall-protection-plan-gadget",
      "type": "ai-analysis-wizard-gadget",
      "title": "Fall Protection Plan",
      "config": {
        "sections": [
          {
            "id": "image_capture",
            "title": "Image Capture",
            "sectionType": "image",
            "includeInPdf": false
          },
          {
            "id": "image_analysis",
            "title": "Scene Analysis",
            "imageAnalysisPromptRef": "deepImageAnalysis",
            "promptSourceIds": [
              "image_capture"
            ],
            "includeInPdf": true,
            "pdf": {
              "includeOverview": true,
              "includeImages": false
            }
          },
          {
            "id": "plan_controls",
            "title": "Plan Controls",
            "includeInPdf": true,
            "grid": {
              "title": "Controls",
              "dataKey": "controls",
              "columns": [
                {
                  "key": "hazard",
                  "title": "Hazard",
                  "editable": true
                },
                {
                  "key": "control",
                  "title": "Control",
                  "editable": true
                },
                {
                  "key": "notes",
                  "title": "Notes",
                  "editable": true
                }
              ],
              "promptRef": "controlsPopulate",
              "btnLabel": "Populate from AI"
            }
          }
        ],
        "groups": [],
        "fields": [],
        "pdfStyling": {
          "header": {
            "backgroundColor": [
              24,
              24,
              27
            ],
            "textColor": [
              255,
              255,
              255
            ],
            "fontSize": 12,
            "companyName": "PK Safety"
          },
          "footer": {
            "textColor": [
              100,
              116,
              139
            ],
            "fontSize": 6,
            "leftText": "Fall Protection",
            "centerText": "Confidential",
            "rightText": "Page {page} of {pages}"
          }
        },
        "prompts": {
          "deepImageAnalysis": {
            "modelConfig": {
              "model": "gpt-5-nano",
              "max_completion_tokens": 1000
            },
            "promptConfig": {
              "systemPrompt": "Analyze for fall hazards and anchors. JSON only.",
              "userPrompt": "JSON only"
            }
          },
          "controlsPopulate": {
            "modelConfig": {
              "model": "gpt-5-nano",
              "max_completion_tokens": 1000,
              "temperature": 0.3
            },
            "promptConfig": {
              "systemPrompt": "Derive fall hazards and controls.",
              "userPrompt": "Transcript:\n{{transcript}}\n\nImage Overview:\n{{image_overview}}\n\nReturn array: [ { \"hazard\": \"string\", \"control\": \"string\", \"notes\": \"string\" } ]"
            }
          }
        },
        "recordDataPopulation": {
          "enabled": true,
          "populateOnLoad": true,
          "disablePopulatedFields": true,
          "urlParams": [
            {
              "name": "recordId",
              "queryParam": "record_id",
              "required": true
            }
          ],
          "request": {
            "url": "/api/documents",
            "method": "GET",
            "query": {
              "type": "asset",
              "id": "{params.recordId}"
            }
          },
          "responseSelector": "data.0"
        },
        "domainConfig": {
          "payloadType": "safety",
          "defaultType": "fall_protection_plan",
          "fields": {
            "type": "wizard_type",
            "documentType": "document_type",
            "label": "label",
            "id": "record_id",
            "name": "record_name",
            "owner": "owner",
            "date": "created_at"
          },
          "outputKeys": {
            "type": "wizardType",
            "documentType": "documentType",
            "label": "label",
            "id": "recordId",
            "name": "recordName",
            "owner": "owner",
            "date": "createdAt"
          },
          "payloadKeys": {
            "type": "wizardType",
            "documentType": "documentType",
            "label": "label"
          },
          "navigation": {
            "listingSuffix": "responses",
            "homeSuffix": "home"
          },
          "typeMap": {
            "fall_protection_plan": "Fall Protection Plan"
          }
        },
        "type": "safety",
        "documentType": "fall_protection_plan",
        "label": "Fall Protection Plan",
        "identity": {
          "recordType": "wizard",
          "domain": "safety",
          "domainLabel": "Safety",
          "domainSubType": "fall_protection_plan",
          "domainSubTypeLabel": "Fall Protection Plan"
        },
        "persistence": {
          "create": {
            "url": "/api/documents",
            "method": "POST"
          },
          "update": {
            "url": "/api/documents/{id}",
            "method": "PUT"
          },
          "progress": {
            "url": "/api/documents/{id}",
            "method": "PATCH"
          },
          "recordIdPath": [
            "data.id",
            "data._id",
            "id",
            "_id"
          ],
          "successMessages": {
            "create": "Wizard record saved",
            "update": "Wizard record updated",
            "progress": "Wizard progress saved"
          }
        }
      },
      "position": 24
    }
  ],
  "layout": "dashboard",
  "settings": {
    "autoRefresh": false,
    "theme": "light",
    "density": "comfortable"
  }
}
