{
  "id": "intelliSAFTEY/ppe-inspection-log",
  "title": "PPE Inspection Log",
  "description": "Track PPE inspections; AI can suggest categories and items.",
  "gadgets": [
    {
      "id": "ppe-inspection-log-gadget",
      "type": "ai-analysis-wizard-gadget",
      "title": "PPE Inspection Log",
      "config": {
        "sections": [
          {
            "id": "inspection_items",
            "title": "PPE Items",
            "includeInPdf": true,
            "grid": {
              "title": "Items",
              "dataKey": "items",
              "columns": [
                {
                  "key": "category",
                  "title": "Category",
                  "editable": true
                },
                {
                  "key": "item",
                  "title": "Item",
                  "editable": true
                },
                {
                  "key": "status",
                  "title": "Status",
                  "editable": true
                },
                {
                  "key": "notes",
                  "title": "Notes",
                  "editable": true
                }
              ],
              "promptRef": "itemsPopulate",
              "btnLabel": "Populate from AI"
            }
          },
          {
            "id": "attachments_signoff",
            "title": "Sign-Off",
            "includeInPdf": true
          }
        ],
        "groups": [
          {
            "id": "signoff_group",
            "title": "Signoff",
            "sectionId": "attachments_signoff",
            "lgSpan": 24
          }
        ],
        "fields": [
          {
            "id": "inspector",
            "label": "Inspector",
            "type": "text",
            "groupId": "signoff_group",
            "lgSpan": 12
          },
          {
            "id": "inspection_date",
            "label": "Date",
            "type": "date",
            "groupId": "signoff_group",
            "lgSpan": 12
          }
        ],
        "pdfStyling": {
          "header": {
            "backgroundColor": [
              24,
              24,
              27
            ],
            "textColor": [
              255,
              255,
              255
            ],
            "fontSize": 12,
            "companyName": "PK Safety"
          },
          "footer": {
            "textColor": [
              100,
              116,
              139
            ],
            "fontSize": 6,
            "leftText": "PPE Log",
            "centerText": "Confidential",
            "rightText": "Page {page} of {pages}"
          }
        },
        "prompts": {
          "itemsPopulate": {
            "modelConfig": {
              "model": "gpt-5-nano",
              "max_completion_tokens": 800,
              "temperature": 0.3
            },
            "promptConfig": {
              "systemPrompt": "Propose PPE inspection items with statuses. JSON array only.",
              "userPrompt": "Transcript:\n{{transcript}}\n\nReturn array: [ { \"category\": \"string\", \"item\": \"string\", \"status\": \"OK|Replace|Clean|N/A\", \"notes\": \"string\" } ]"
            }
          }
        },
        "recordDataPopulation": {
          "enabled": true,
          "populateOnLoad": true,
          "disablePopulatedFields": true,
          "urlParams": [
            {
              "name": "recordId",
              "queryParam": "record_id",
              "required": true
            }
          ],
          "request": {
            "url": "/api/documents",
            "method": "GET",
            "query": {
              "type": "asset",
              "id": "{params.recordId}"
            }
          },
          "responseSelector": "data.0"
        },
        "domainConfig": {
          "payloadType": "safety",
          "defaultType": "ppe_inspection_log",
          "fields": {
            "type": "wizard_type",
            "documentType": "document_type",
            "label": "label",
            "id": "record_id",
            "name": "record_name",
            "owner": "owner",
            "date": "created_at"
          },
          "outputKeys": {
            "type": "wizardType",
            "documentType": "documentType",
            "label": "label",
            "id": "recordId",
            "name": "recordName",
            "owner": "owner",
            "date": "createdAt"
          },
          "payloadKeys": {
            "type": "wizardType",
            "documentType": "documentType",
            "label": "label"
          },
          "navigation": {
            "listingSuffix": "responses",
            "homeSuffix": "home"
          },
          "typeMap": {
            "ppe_inspection_log": "PPE Inspection Log"
          }
        },
        "type": "safety",
        "documentType": "ppe_inspection_log",
        "label": "PPE Inspection Log",
        "identity": {
          "recordType": "wizard",
          "domain": "safety",
          "domainLabel": "Safety",
          "domainSubType": "ppe_inspection_log",
          "domainSubTypeLabel": "PPE Inspection Log"
        },
        "persistence": {
          "create": {
            "url": "/api/documents",
            "method": "POST"
          },
          "update": {
            "url": "/api/documents/{id}",
            "method": "PUT"
          },
          "progress": {
            "url": "/api/documents/{id}",
            "method": "PATCH"
          },
          "recordIdPath": [
            "data.id",
            "data._id",
            "id",
            "_id"
          ],
          "successMessages": {
            "create": "Wizard record saved",
            "update": "Wizard record updated",
            "progress": "Wizard progress saved"
          }
        }
      },
      "position": 24
    }
  ],
  "layout": "dashboard",
  "settings": {
    "autoRefresh": false,
    "theme": "light",
    "density": "comfortable"
  }
}
