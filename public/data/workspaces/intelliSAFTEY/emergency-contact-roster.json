{
  "id": "intelliSAFTEY/emergency-contact-roster",
  "title": "Emergency Contact Roster and Muster Plan",
  "description": "Maintain contact roster and muster plan.",
  "gadgets": [
    {
      "id": "emergency-contact-roster-gadget",
      "type": "ai-analysis-wizard-gadget",
      "title": "Emergency Contacts & Muster Plan",
      "config": {
        "sections": [
          {
            "id": "contacts",
            "title": "Contacts",
            "includeInPdf": true,
            "grid": {
              "title": "Contacts",
              "dataKey": "contacts",
              "columns": [
                {
                  "key": "name",
                  "title": "Name",
                  "editable": true
                },
                {
                  "key": "role",
                  "title": "Role",
                  "editable": true
                },
                {
                  "key": "phone",
                  "title": "Phone",
                  "editable": true
                },
                {
                  "key": "email",
                  "title": "Email",
                  "editable": true
                }
              ],
              "promptRef": "contactsPopulate",
              "btnLabel": "Populate from AI"
            }
          },
          {
            "id": "muster_plan",
            "title": "Muster Plan",
            "includeInPdf": true,
            "grid": {
              "title": "Muster Steps",
              "dataKey": "musterSteps",
              "columns": [
                {
                  "key": "stepNo",
                  "title": "#",
                  "editable": true
                },
                {
                  "key": "step",
                  "title": "Step",
                  "editable": true
                },
                {
                  "key": "notes",
                  "title": "Notes",
                  "editable": true
                }
              ],
              "promptRef": "musterPopulate",
              "btnLabel": "Populate from AI"
            }
          }
        ],
        "groups": [],
        "fields": [],
        "pdfStyling": {
          "header": {
            "backgroundColor": [
              24,
              24,
              27
            ],
            "textColor": [
              255,
              255,
              255
            ],
            "fontSize": 12,
            "companyName": "PK Safety"
          },
          "footer": {
            "textColor": [
              100,
              116,
              139
            ],
            "fontSize": 6,
            "leftText": "Emergency Contacts",
            "centerText": "Confidential",
            "rightText": "Page {page} of {pages}"
          }
        },
        "prompts": {
          "contactsPopulate": {
            "modelConfig": {
              "model": "gpt-5-nano",
              "max_completion_tokens": 800
            },
            "promptConfig": {
              "systemPrompt": "Draft an emergency contact roster from transcript. JSON array only.",
              "userPrompt": "Transcript:\n{{transcript}}\n\nReturn array: [ { \"name\": \"string\", \"role\": \"string\", \"phone\": \"string\", \"email\": \"string\" } ]"
            }
          },
          "musterPopulate": {
            "modelConfig": {
              "model": "gpt-5-nano",
              "max_completion_tokens": 800
            },
            "promptConfig": {
              "systemPrompt": "Draft a muster plan (steps). JSON array only.",
              "userPrompt": "Transcript:\n{{transcript}}\n\nReturn array: [ { \"stepNo\": \"string|number\", \"step\": \"string\", \"notes\": \"string\" } ]"
            }
          }
        },
        "recordDataPopulation": {
          "enabled": true,
          "populateOnLoad": true,
          "disablePopulatedFields": true,
          "urlParams": [
            {
              "name": "recordId",
              "queryParam": "record_id",
              "required": true
            }
          ],
          "request": {
            "url": "/api/documents",
            "method": "GET",
            "query": {
              "type": "asset",
              "id": "{params.recordId}"
            }
          },
          "responseSelector": "data.0"
        },
        "domainConfig": {
          "payloadType": "safety",
          "defaultType": "emergency_contact_roster",
          "fields": {
            "type": "wizard_type",
            "documentType": "document_type",
            "label": "label",
            "id": "record_id",
            "name": "record_name",
            "owner": "owner",
            "date": "created_at"
          },
          "outputKeys": {
            "type": "wizardType",
            "documentType": "documentType",
            "label": "label",
            "id": "recordId",
            "name": "recordName",
            "owner": "owner",
            "date": "createdAt"
          },
          "payloadKeys": {
            "type": "wizardType",
            "documentType": "documentType",
            "label": "label"
          },
          "navigation": {
            "listingSuffix": "responses",
            "homeSuffix": "home"
          },
          "typeMap": {
            "emergency_contact_roster": "Emergency Contact Roster and Muster Plan"
          }
        },
        "type": "safety",
        "documentType": "emergency_contact_roster",
        "label": "Emergency Contact Roster and Muster Plan",
        "identity": {
          "recordType": "wizard",
          "domain": "safety",
          "domainLabel": "Safety",
          "domainSubType": "emergency_contact_roster",
          "domainSubTypeLabel": "Emergency Contacts & Muster Plan"
        },
        "persistence": {
          "create": {
            "url": "/api/documents",
            "method": "POST"
          },
          "update": {
            "url": "/api/documents/{id}",
            "method": "PUT"
          },
          "progress": {
            "url": "/api/documents/{id}",
            "method": "PATCH"
          },
          "recordIdPath": [
            "data.id",
            "data._id",
            "id",
            "_id"
          ],
          "successMessages": {
            "create": "Wizard record saved",
            "update": "Wizard record updated",
            "progress": "Wizard progress saved"
          }
        }
      },
      "position": 24
    }
  ],
  "layout": "dashboard",
  "settings": {
    "autoRefresh": false,
    "theme": "light",
    "density": "comfortable"
  }
}
