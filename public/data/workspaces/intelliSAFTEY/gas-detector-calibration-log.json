{
  "id": "intelliSAFTEY/gas-detector-calibration-log",
  "title": "Gas Detector Calibration Log",
  "description": "Record calibration events for gas detectors.",
  "gadgets": [
    {
      "id": "gas-detector-calibration-log-gadget",
      "type": "ai-analysis-wizard-gadget",
      "title": "Calibration Log",
      "config": {
        "sections": [
          {
            "id": "cal_events",
            "title": "Calibration Events",
            "includeInPdf": true,
            "grid": {
              "title": "Events",
              "dataKey": "events",
              "columns": [
                {
                  "key": "deviceId",
                  "title": "Device ID",
                  "editable": true
                },
                {
                  "key": "date",
                  "title": "Date",
                  "editable": true
                },
                {
                  "key": "gas",
                  "title": "Calibration Gas",
                  "editable": true
                },
                {
                  "key": "pass",
                  "title": "Pass (Yes/No)",
                  "editable": true
                },
                {
                  "key": "notes",
                  "title": "Notes",
                  "editable": true
                }
              ],
              "promptRef": "eventsPopulate",
              "btnLabel": "Populate from AI"
            }
          },
          {
            "id": "attachments_signoff",
            "title": "Sign-Off",
            "includeInPdf": true
          }
        ],
        "groups": [
          {
            "id": "signoff_group",
            "title": "Signoff",
            "sectionId": "attachments_signoff",
            "lgSpan": 24
          }
        ],
        "fields": [
          {
            "id": "technician",
            "label": "Technician",
            "type": "text",
            "groupId": "signoff_group",
            "lgSpan": 12
          },
          {
            "id": "date",
            "label": "Date",
            "type": "date",
            "groupId": "signoff_group",
            "lgSpan": 12
          }
        ],
        "pdfStyling": {
          "header": {
            "backgroundColor": [
              24,
              24,
              27
            ],
            "textColor": [
              255,
              255,
              255
            ],
            "fontSize": 12,
            "companyName": "PK Safety"
          },
          "footer": {
            "textColor": [
              100,
              116,
              139
            ],
            "fontSize": 6,
            "leftText": "Calibration Log",
            "centerText": "Confidential",
            "rightText": "Page {page} of {pages}"
          }
        },
        "prompts": {
          "eventsPopulate": {
            "modelConfig": {
              "model": "gpt-5-nano",
              "max_completion_tokens": 600,
              "temperature": 0.3
            },
            "promptConfig": {
              "systemPrompt": "Draft calibration events from transcript (if provided). JSON array only.",
              "userPrompt": "Transcript:\n{{transcript}}\n\nReturn array: [ { \"deviceId\": \"string\", \"date\": \"YYYY-MM-DD\", \"gas\": \"string\", \"pass\": \"Yes|No\", \"notes\": \"string\" } ]"
            }
          }
        },
        "recordDataPopulation": {
          "enabled": true,
          "populateOnLoad": true,
          "disablePopulatedFields": true,
          "urlParams": [
            {
              "name": "recordId",
              "queryParam": "record_id",
              "required": true
            }
          ],
          "request": {
            "url": "/api/documents",
            "method": "GET",
            "query": {
              "type": "asset",
              "id": "{params.recordId}"
            }
          },
          "responseSelector": "data.0"
        },
        "domainConfig": {
          "payloadType": "safety",
          "defaultType": "gas_detector_calibration_log",
          "fields": {
            "type": "wizard_type",
            "documentType": "document_type",
            "label": "label",
            "id": "record_id",
            "name": "record_name",
            "owner": "owner",
            "date": "created_at"
          },
          "outputKeys": {
            "type": "wizardType",
            "documentType": "documentType",
            "label": "label",
            "id": "recordId",
            "name": "recordName",
            "owner": "owner",
            "date": "createdAt"
          },
          "payloadKeys": {
            "type": "wizardType",
            "documentType": "documentType",
            "label": "label"
          },
          "navigation": {
            "listingSuffix": "responses",
            "homeSuffix": "home"
          },
          "typeMap": {
            "gas_detector_calibration_log": "Gas Detector Calibration Log"
          }
        },
        "type": "safety",
        "documentType": "gas_detector_calibration_log",
        "label": "Gas Detector Calibration Log",
        "identity": {
          "recordType": "wizard",
          "domain": "safety",
          "domainLabel": "Safety",
          "domainSubType": "gas_detector_calibration_log",
          "domainSubTypeLabel": "Calibration Log"
        },
        "persistence": {
          "create": {
            "url": "/api/documents",
            "method": "POST"
          },
          "update": {
            "url": "/api/documents/{id}",
            "method": "PUT"
          },
          "progress": {
            "url": "/api/documents/{id}",
            "method": "PATCH"
          },
          "recordIdPath": [
            "data.id",
            "data._id",
            "id",
            "_id"
          ],
          "successMessages": {
            "create": "Wizard record saved",
            "update": "Wizard record updated",
            "progress": "Wizard progress saved"
          }
        }
      },
      "position": 24
    }
  ],
  "layout": "dashboard",
  "settings": {
    "autoRefresh": false,
    "theme": "light",
    "density": "comfortable"
  }
}
