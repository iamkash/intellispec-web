{
  "id": "paint-invoice-dashboard",
  "title": "Paint Invoice Dashboard",
  "description": "Manage paint invoices and purchase tracking with comprehensive search and editing capabilities",
  "layout": "dashboard",
  "gadgets": [
    {
      "id": "paint-invoice-navigation",
      "type": "action-panel-gadget",
      "title": "Navigation & Actions",
      "description": "Provides navigation links to related workspaces and common actions for managing paint invoices",
      "config": {
        "layout": "horizontal",
        "maxItems": 5,
        "showIcons": true,
        "showLabels": true,
        "cardSize": "medium",
        "spacing": "even",
        "actions": [
          {
            "key": "paint-specs",
            "label": "‚Üê Paint Specifications",
            "description": "Return to Paint Specs Dashboard",
            "icon": "ExperimentOutlined",
            "type": "default",
            "workspace": "asset-manager/paint-specs-dashboard"
          },
          {
            "key": "voc-dashboard",
            "label": "VOC Dashboard",
            "description": "Navigate to VOC workspace",
            "icon": "DashboardOutlined",
            "type": "default",
            "workspace": "compliance-manager/voc-workspace"
          },
          {
            "key": "asset-management",
            "label": "Asset Management",
            "description": "Manage sites, asset groups, and assets",
            "icon": "ApartmentOutlined",
            "type": "default",
            "workspace": "asset-manager/asset-management"
          }
        ]
      },
      "position": 24
    },
    {
      "id": "paint-invoice-grid",
      "type": "sgrid-search-gadget",
      "title": "Paint Invoices",
      "description": "Displays a searchable and editable grid of paint invoice records with inline editing capabilities",
      "config": {
        "dataUrl": "/api/documents?type=paintInvoice",
        "columns": [
          {
            "key": "invoiceNumber",
            "title": "Invoice #",
            "width": "15%",
            "field": {
              "type": "text",
              "required": true,
              "placeholder": "Enter invoice number"
            }
          },
          {
            "key": "companyName",
            "title": "Company",
            "width": "20%",
            "field": {
              "type": "text",
              "placeholder": "Company name"
            }
          },
          {
            "key": "facilityName", 
            "title": "Facility",
            "width": "20%",
            "field": {
              "type": "text",
              "placeholder": "Facility name"
            }
          },
          {
            "key": "purchaseDate",
            "title": "Purchase Date",
            "width": "15%",
            "field": {
              "type": "date",
              "required": true,
              "placeholder": "Select date"
            }
          },
          {
            "key": "poNumber",
            "title": "PO #",
            "width": "15%",
            "field": {
              "type": "text",
              "required": true,
              "placeholder": "PO number"
            }
          },
          {
            "key": "lineItemCount",
            "title": "Items",
            "width": "10%",
            "field": {
              "type": "number",
              "placeholder": "Line items"
            }
          },
          {
            "key": "last_updated",
            "title": "Last Updated",
            "width": "15%",
            "field": {
              "type": "date"
            }
          }
        ],
        "rowActions": [
          {
            "key": "edit",
            "label": "Edit",
            "type": "primary",
            "workspace": "asset-manager/paint-invoice-form",
            "params": {
              "mode": "edit",
              "id": "{_id}"
            }
          },
          {
            "key": "view",
            "label": "View",
            "type": "default",
            "workspace": "asset-manager/paint-invoice-form",
            "params": {
              "mode": "view",
              "id": "{_id}"
            }
          },
          {
            "key": "delete",
            "label": "Delete",
            "type": "danger",
            "confirmText": "Are you sure you want to delete this invoice?"
          }
        ],
        "toolbar": {
          "enableCreate": true,
          "createButtonText": "Create Invoice",
          "createWorkspace": "asset-manager/paint-invoice-form",
          "createParams": {
            "mode": "create",
            "id": "new"
          },
          "enableBulkDelete": true,
          "bulkDeleteText": "Delete Selected",
          "bulkDeleteConfirmText": "Are you sure you want to delete the selected invoices?"
        },
        "search": {
          "placeholder": "Search invoices...",
          "enableColumnFilters": true
        },
        "pagination": {
          "pageSize": 15,
          "showSizeChanger": true,
          "showQuickJumper": true,
          "showTotal": true
        }
      },
      "position": 24
    }
  ],
  "settings": {
    "autoRefresh": true,
    "refreshInterval": 300000,
    "theme": "light",
    "density": "comfortable",
    "showLastUpdated": true,
    "enableExport": true,
    "enablePrint": true
  },
  "metadata": {
    "created": "2024-01-15T00:00:00Z",
    "version": "1.0.0",
    "tags": ["paint", "invoices", "purchase", "tracking", "assets"],
    "description": "Paint invoice dashboard with comprehensive search, editing, and tracking capabilities."
  }
}
