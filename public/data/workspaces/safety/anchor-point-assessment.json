          {
            "id": "anchor_list",
            "title": "Anchor List",
            "includeInPdf": true,
            "grid": {
              "title": "Anchors",
              "dataKey": "anchors",
              "columns": [
                { "key": "id", "title": "ID", "editable": true },
                { "key": "location", "title": "Location", "editable": true },
                { "key": "type", "title": "Type", "editable": true },
                { "key": "rating", "title": "Rated (kN)", "editable": true },
                { "key": "status", "title": "Status", "editable": true },
                { "key": "notes", "title": "Notes", "editable": true }
