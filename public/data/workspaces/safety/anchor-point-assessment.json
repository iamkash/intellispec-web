          "deepImageAnalysis": { "modelConfig": { "model": "gpt-5-nano", "max_completion_tokens": 1000 }, "promptConfig": { "systemPrompt": "Identify potential anchor points with rationale. Output JSON only.", "userPrompt": "JSON only" } },
          "anchorsPopulate": { "modelConfig": { "model": "gpt-5-nano", "max_completion_tokens": 800 }, "promptConfig": { "systemPrompt": "List anchors with location, type, approximate rating, and status.", "userPrompt": "Image Overview:\n{{image_overview}}\n\nReturn array: [ { \"id\": \"string\", \"location\": \"string\", \"type\": \"string\", \"rating\": \"string|number\", \"status\": \"OK|Evaluate|N/A\", \"notes\": \"string\" } ]" } }
        }
      },
      "position": 24
    }
