{
  "id": "safety-rescue-plan-home",
  "title": "Rescue Plan Home",
  "description": "Quick links and recent rescue plans",
  "layout": "dashboard",
  "gadgets": [
    {
      "id": "rescue-quick-actions",
      "type": "action-panel-gadget",
      "title": "Quick Actions",
      "config": {
        "dataUrl": "/data/mock-data/safety/rescue/quick-actions.json",
        "dataPath": "actions",
        "layout": "horizontal",
        "maxItems": 50,
        "showIcons": true,
        "showLabels": true,
        "cardSize": "large",
        "spacing": "even"
      },
      "position": 24
    },
    {
      "id": "rescue-plans-grid",
      "type": "sgrid-search-gadget",
      "title": "My Rescue Plans",
      "config": {
        "dataUrl": "/api/wizard?prefix=rescue-preplan:",
        "columns": [
          { "key": "id", "title": "ID" },
          { "key": "data.currentStep", "title": "Step" },
          { "key": "timestamp", "title": "Saved At" },
          { "key": "gadgetId", "title": "Gadget" },
          { "key": "configId", "title": "Config" }
        ],
        "rowActions": [
          { "key": "open", "label": "Open", "type": "link", "route": "/safety/rescue-preplan?restoreId={id}" },
          { "key": "delete", "label": "Delete", "type": "danger" }
        ],
        "search": { "placeholder": "Search plans..." },
        "pagination": { "pageSize": 10 }
      },
      "position": 24
    }
  ]
}


