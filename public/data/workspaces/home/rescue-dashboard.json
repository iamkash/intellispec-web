{
  "id": "home/rescue-dashboard",
  "title": "Rescue Plan Home",
  "description": "Quick links and recent rescue plans",
  "layout": "dashboard",
  "gadgets": [
    {
      "id": "rescue-quick-actions",
      "type": "action-panel-gadget",
      "title": "Quick Actions",
      "config": {
        "size": "large",
        "layout": "grid",
        "maxItems": 6,
        "items": [
          {
            "id": "new-plan",
            "title": "New Rescue Plan",
            "icon": "FormOutlined",
            "route": "/shell?workspace=intelliSAFTEY/rescue-preplan"
          },
          {
            "id": "open-plans",
            "title": "Open Plans",
            "icon": "FolderOpenOutlined",
            "route": "/shell?workspace=home/rescue-dashboard"
          }
        ]
      },
      "position": 24
    },
    {
      "id": "rescue-plans-grid",
      "type": "sgrid-search-gadget",
      "title": "My Rescue Plans",
      "config": {
        "dataUrl": "/api/wizard",
        "dataSource": "localStorage:rescue-preplan:*",
        "columns": [
          {
            "key": "id",
            "title": "ID"
          },
          {
            "key": "data.currentStep",
            "title": "Step"
          },
          {
            "key": "timestamp",
            "title": "Saved At"
          },
          {
            "key": "gadgetId",
            "title": "Gadget"
          },
          {
            "key": "configId",
            "title": "Config"
          }
        ],
        "rowActions": [
          {
            "key": "open",
            "label": "Open",
            "type": "link",
            "route": "/shell?workspace=intelliSAFTEY/rescue-preplan&restoreId={id}"
          },
          {
            "key": "delete",
            "label": "Delete",
            "type": "danger"
          }
        ],
        "search": {
          "placeholder": "Search plans..."
        },
        "pagination": {
          "pageSize": 10
        }
      },
      "position": 24
    }
  ]
}
